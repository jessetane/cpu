#!/usr/bin/env bash
#
# cpu
#

cpu() {
  
  # deps
  vpkg load argue 0.0.5 && . libargue.sh || return 1
  
  # args/opts
  args=("$@")
  cmd="$1" && shift
  
  # proxy to cmd
  case "$cmd" in
    "count" ) cpu_count "$@";;
    * )
      
      # parse options
      argue "-v, --version"\
            "-h, --help" || return 1

      # if we have $cmd and no options
      if [ -n "$cmd" ] && [ "${#opts[@]}" = 0 ]; then
        echo "$cmd: command not found" >&2 && return 1
      elif [ -n "${opts[0]}" ]; then
        cpu_version
      else
        cpu_usage
      fi
  esac
}

cpu_version() {
  echo "0.0.4"
}

cpu_usage() {
  echo "usage: cpu <command>"
}

cpu_count() {
  os="$(uname)"
  case "$os" in
    "Darwin" ) sysctl -n hw.ncpu;;
    "Linux" ) cat /proc/cpuinfo | grep processor | wc -l;;
    * ) echo "$os: unknown platform" && exit 1;;
  esac
}

# go
cpu "$@"
